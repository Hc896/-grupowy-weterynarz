<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- suwaczek !!! :333 -->
        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/suwakinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ile ma lat? 0" />

            <SeekBar
                android:id="@+id/suwak"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20" />
        </LinearLayout>

        <TextView
            android:id="@+id/celWizyty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cel wizyty" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="140dp"
            android:layout_height="51dp"
            android:text="Gatunek" />
        <EditText
            android:id="@+id/ile_ma_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
        <EditText
            android:id="@+id/imieNazwiskoWlasciciela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Imię i nazwisko właściciela..." />

        <EditText
            android:id="@+id/imieKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Imię i nazwisko kota..." />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

